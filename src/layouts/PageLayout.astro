---
import Footer from '~/components/widgets/Footer.astro';
import Header from '~/components/widgets/Header.astro';
import Layout from '~/layouts/Layout.astro';

import { footerData, footerDataEN, headerData, headerDataEN } from '~/navigation';

import type { MetaData } from '~/types';

export interface Props {
  metadata?: MetaData;
}

const { metadata } = Astro.props;
const currentLocale = Astro.currentLocale;
---

<Layout metadata={metadata}>
  <slot name="header">
    <Header {...(currentLocale === 'en' ? headerDataEN : headerData)} isSticky position="center" />
  </slot>
  <main>
    <slot />
  </main>
  <slot name="footer">
    <Footer {...(currentLocale === 'en' ? footerDataEN : footerData)}>
      <Fragment slot="description">
        <p>
          We are Software Solution Expert made by <span class="text-primary font-bold">MVP Technical Team</span><br
          />พัฒนาโซลูชันธุรกิจด้วย ASP.NET, Azure และ C# โดยทีม MVP และผู้เชี่ยวชาญ
        </p>
      </Fragment>
    </Footer>
  </slot>
</Layout>
