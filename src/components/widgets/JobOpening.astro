        {
          jobs.map((job) => (
            <div class="bg-gray-100 p-8 rounded-lg shadow-md">
              <div class="flex flex-col md:flex-row gap-6">
                <div class="md:w-1/3">
                  <Image src={job.image} alt={job.title} class="w-full h-auto rounded-lg mb-4" />
                </div>
                <div class="md:w-2/3">
                  <h3 class="text-2xl font-bold mb-4">{job.title}</h3>

                  {job.description.sections.map((section) => (
                    <div class="mb-6">
                      <h4 class="text-xl font-semibold mb-3">{section.title}</h4>
                      <ul class="list-disc pl-5 space-y-2">
                        {section.items.map((item) => (
                          <li>{item}</li>
                        ))}
                      </ul>
                    </div>
                  ))}

                  {job.qualifications?.length > 0 && (
                    <div class="mb-6">
                      <h4 class="text-xl font-semibold mb-3">Qualifications</h4>
                      <ul class="list-disc pl-5 space-y-2">
                        {job.qualifications?.map((qual) => (
                          <li>{qual}</li>
                        ))}
                      </ul>
                    </div>
                  )}

                  <div class="mb-6">
                    <h4 class="text-xl font-semibold mb-3">Location</h4>
                    <p class="font-medium">{job.locations.remote}</p>
                    <p class="mt-2">Office:</p>
                    <ul class="list-disc pl-5">
                      {job.locations.office.map((loc) => (
                        <li>{loc}</li>
                      ))}
                    </ul>
                  </div>

                  <div class="mb-6">
                    <h4 class="text-xl font-semibold mb-3">Contact</h4>
                    <p>Tel: {job.contact.tel}</p>
                    <p>Email: {job.contact.email}</p>
                  </div>

                  <a
                    href={job.applyLink}
                    class="inline-block bg-primary px-6 py-3 rounded-md text-lg font-semibold text-white transition hover:bg-primary-dark"
                  >
                    สมัครงาน
                  </a>
                </div>
              </div>
