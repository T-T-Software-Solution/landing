      height: 80px;
    }

    .role11,
    .role7,
    .role3 {
      width: 55px;
      height: 55px;
    }

    .role7 span {
      font-size: 10px;
    }

    .role3 {
      top: 27%;
    }

    .role6 {
      bottom: 7%;
      left: 65%;
      width: 70px;
      height: 70px;
    }

    .role8 {
      left: 2%;
      width: 70px;
      height: 70px;
    }

    .role10 {
      left: 10%;
    }
  }
</style>
