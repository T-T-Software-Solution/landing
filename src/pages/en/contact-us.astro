const contactInfoList = [
  {
    title: 'Technical Department',
    phone: '+668 6899 6243',
    email: 'nakorn@tt-ss.net',
    icon: 'envelope',
  },
  {
    title: 'Customer Department',
    phone: '+669 0161 9166',
    email: 'watcharapong@tt-ss.net',
