---

<Layout metadata={metadata}>
  <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-4xl">
    <h1 class="font-bold font-heading text-4xl md:text-4xl leading-tighter tracking-tighter text-center mt-12">
      Contact Us
    </h1>
    <div class="mx-auto max-w-3xl text-center mb-8 mt-4">
      <p class="text-xl text-gray-600">We are ready to provide the best service to our customers and partners</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        contactInfoList.map((contact) => (
          <ContactInfo title={contact.title} phone={contact.phone} email={contact.email} icon={contact.icon} />
        ))
      }
    </div>

    <div class="mt-12">
      <h2 class="text-2xl font-semibold text-center mb-4">Our Office Locations</h2>
      
      <div class="flex justify-center">
      <div class="flex flex-wrap justify-center gap-8 w-full">
        {
        officeLocations.map((location) => (
          <div class="flex flex-col items-center w-full md:w-1/2 lg:w-1/3">
        <OfficeLocation officeName={location.officeName} address={location.address} mapSrc={location.mapSrc} />
          </div>
        ))
        }
      </div>
      </div>
    </div>
  </section>
</Layout>
