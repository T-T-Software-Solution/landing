---
import { Icon } from 'astro-icon/components';
import Image from '~/components/common/Image.astro';
import ArrowRightIcon from '~/components/icons/ArrowRightIcon.astro';
import FacebookIcon from '~/components/icons/FacebookIcon.astro';
import LineIcon from '~/components/icons/LineIcon.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import DigitalTransFormation from '~/components/widgets/DigitalTransFormation.astro';
import { environmentConfig } from '~/config';
import Layout from '~/layouts/PageLayout.astro';
import ProductShowCase from '~/components/widgets/ProductShowCase.astro';
import TrustBusiness from '~/components/widgets/TrustBusiness.astro';
import TalktoMe from '~/components/widgets/TalktoMe.astro';

const metadata = {
  title: 'T.T. Software Solution — ที.ที. ซอฟแวร์ โซลูชั่น',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <div class="max-w-7xl mx-auto px-4 lg:px-6 py-12">
    <Hero bg={`${environmentConfig.baseImageUrl}/images/hero-bg-shape.webp`} overrideClass="pt-20 !py-0 !lg:py-0">
      <Fragment slot="title">
        <div
          class="sm:text-4xl text-2xl bg-gradient-to-r from-[#FF6A3F] to-[#FFAC26F0] inline-block text-transparent bg-clip-text"
        >
          T.T. Software Solution
        </div>
        <div class="font-bold tracking-normal mt-2 md:text-2xl">
          Empower Your Business with Tailor-Made<br />Software Solutions and AI Integration<br />Simple 3 Steps
        </div>
      </Fragment>
      <Fragment slot="contact">
        <div class="grid grid-cols-1 md:grid-cols-12 lg:grid-cols-11 gap-5 lg:gap-2 items-center my-4 !mt-7">
          <div
            class="relative col-span-4 lg:col-span-3 border-2 border-[#FF6A3F] rounded-lg p-5 flex flex-col items-center justify-center lg:justify-start gap-4 h-full"
          >
            <div class="absolute top-[-1rem] min-w-[150px] border-2 border-[#FF6A3F] rounded-lg">
              <div class="flex items-center justify-center bg-white rounded-lg px-2 py-1">
                <span class="text-sm font-bold text-[#FF6A3F]">Step 1</span>
              </div>
            </div>
            <div
              class="flex items-center justify-center bg-gradient-to-b from-[#FFD8CD] to-[#FFEA9400] rounded-lg mt-2"
            >
              <Image src="~/assets/images/step1.webp" alt="Step 1" class="h-[200px] lg:h-[300px] !object-contain" />
            </div>
            <div class="text-center">
              <span class="text-xl font-bold"
                >Contact us through various<br />channels to discuss <br /> your requirements</span
              >
            </div>
            <div class="text-center font-normal text-[#6C757D] text-sm">
              You can contact us via <span class="text-[#FF6A3F]">Facebook</span>, <span class="text-[#FF6A3F]"
                >Live Chat</span
              >
              <span class="text-[#FF6A3F]">Live chat on our website</span>, <span class="text-[#FF6A3F]"
                >Line @ttss</span
              > or <span class="text-[#FF6A3F]">phone</span>
              for convenient and quick conversation
            </div>
          </div>
          <div class="items-center justify-center hidden lg:flex">
            <ArrowRightIcon width="4rem" height="4rem" />
          </div>
          <div
            class="relative col-span-4 lg:col-span-3 border-2 border-[#FF6A3F] rounded-lg p-5 flex flex-col items-center justify-start gap-4 h-full"
          >
            <div class="absolute top-[-1.5rem] min-w-[150px] border-2 border-[#FF6A3F] rounded-lg mt-2">
              <div class="flex items-center justify-center bg-white rounded-lg px-2 py-1">
                <span class="text-sm font-bold text-[#FF6A3F]">Step 2</span>
              </div>
            </div>
            <div class="flex items-center justify-center bg-gradient-to-b from-[#FFD8CD] to-[#FFEA9400] rounded-lg">
              <Image src="~/assets/images/step2.webp" alt="Step 2" class="h-[200px] lg:h-[300px] !object-contain" />
            </div>
            <div class="text-center">
              <span class="text-xl font-bold">
                Create a prototype
                <br />in MVP
              </span>
            </div>
            <div class="text-center font-normal text-[#6C757D] text-sm">
              Our team presents a working system prototype that directly aligns with your business/work/activities.
            </div>
          </div>
          <div class="items-center justify-center hidden lg:flex">
            <ArrowRightIcon width="4rem" height="4rem" />
          </div>
          <div
            class="relative col-span-4 lg:col-span-3 border-2 border-[#FF6A3F] rounded-lg p-5 flex flex-col items-center justify-start gap-4 h-full"
          >
            <div class="absolute top-[-1.5rem] min-w-[150px] border-2 border-[#FF6A3F] rounded-lg mt-2">
              <div class="flex items-center justify-center bg-white rounded-lg px-2 py-1">
                <span class="text-sm font-bold text-[#FF6A3F]">Step 3</span>
              </div>
            </div>
            <div
              class="flex items-center justify-center bg-gradient-to-b from-[#FFD8CD] to-[#FFEA9400] rounded-lg mt-2"
            >
              <Image src="~/assets/images/step3.webp" alt="Step 3" class="h-[200px] lg:h-[300px] !object-contain" />
            </div>
            <div class="text-center">
              <span class="text-xl font-bold">Evaluate pricing and<br />schedule the timeline</span>
            </div>
            <div class="text-center font-normal text-[#6C757D] text-sm">
              Discuss detailed requirements, send <br />price quotes, sign contracts, and schedule delivery.
            </div>
          </div>
        </div>
        <div class="text-center text-muted my-2">We are Microsoft Technology leaders in Thailand</div>
        <div class="text-center text-muted my-2">
          Developing business solutions with ASP.NET, Azure and C# with MVPs and experts.
        </div>
        <div class="flex flex-col sm:flex-row flex-wrap gap-4 justify-center mb-8 text-muted content-center">
          <div class="col-span-1">
            <span>Contact</span>
          </div>
          <a href="tel:+66901619166" target="_blank">
            <div class="flex items-center gap-2 w-fit">
              <Icon name="phone" />
              <span class="text-sm sm:text-base">(+66)90-1619166 (Bangkok office)</span>
            </div>
          </a>
          <a href="mailto:watcharapong@tt-ss.net" target="_blank">
            <div class="flex items-center gap-2 w-fit">
              <Icon name="envelope" />
              <span class="text-sm sm:text-base">watcharapong@tt-ss.net</span>
            </div>
          </a>
          <a href="https://www.facebook.com/ttsoftwaresolution" target="_blank">
            <div class="flex items-center gap-2 w-fit">
              {/* <Icon name="facebook" /> */}
              <FacebookIcon width="1em" height="1em" />
              <span class="text-sm sm:text-base">T. T. Software Solution</span>
            </div>
          </a>
          <a href="https://line.me/R/ti/p/@ttss" target="_blank">
            <div class="flex items-center gap-2 w-fit">
              {/* <Icon name="line" /> */}
              <LineIcon width="1em" height="1em" />
              <span class="text-sm sm:text-base">@ttss</span>
            </div>
          </a>
        </div>
        <div
          class="open-chat-head text-center font-bold cursor-pointer my-2 border border-[#FF6A3F] rounded-lg w-fit mx-auto px-4 py-2 bg-gradient-to-l from-[#FF6A3F] to-[#F5C253] text-white sm:min-w-[300px] hover:bg-gradient-to-l hover:from-[#cf6244] hover:to-[#F5C253] transition-all duration-300"
        >
          CHAT WITH US →
        </div>
      </Fragment>
    </Hero>
  </div>

  <div class="bg-[#FAFAFA] pb-16">
    <div
      class="max-w-7xl mx-auto px-4 lg:px-6 py-12 text-center text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2 animate-on-scroll"
    >
      <div>Products and Our Expertise</div>
      <div class="border-b border-4 border-[#FF6A3F] w-[100px] mx-auto my-4"></div>
      <div class="text-base font-normal mt-4 md:text-xl text-[#4D4C66]">
        With over 15 years of experience, we offer the following services
      </div>
    </div>
    <Content
      isReversed
      classes={{
        container: '',
        items: {
          icon: 'flex h-7 w-7 items-center justify-center rounded-full bg-[#2CD762] dark:bg-[#2CD762] text-gray-50 p-1',
        },
      }}
      isAfterContent
      disableAnimation
      items={[
        {
          title: 'System Integration',
          description: 'Integrate data from all departments in your organization for smooth collaborative operations',
          icon: 'tabler:check',
        },
        {
          title: 'Natural Thai and English Language Processing',
          description: 'Understand and analyze Thai-English language content naturally and accurately',
          icon: 'tabler:check',
        },
        {
          title: 'Custom AI Development for Your Organization',
          description: 'Customize AI to meet your specific business needs',
          icon: 'tabler:check',
        },
        {
          title: 'Work Automation',
          description: 'Reduce workload through automated systems that handle repetitive tasks',
          icon: 'tabler:check',
        },
      ]}
    >
      <Fragment slot="title"> </Fragment>
      <Fragment slot="content">
        <h3
          class="text-2xl font-bold bg-gradient-to-r from-[#FF6A3F] to-[#FFAC26F0] inline-block text-transparent bg-clip-text sm:text-3xl mb-2 animate-on-scroll"
        >
          T.T. AI Framework
        </h3>
        <div class="text-muted text-base my-2">
          A solution that helps organizations effectively implement AI technology without requiring in-depth technical
          knowledge. We design systems that connect seamlessly with your existing organizational systems.
        </div>
      </Fragment>
      <Fragment slot="image">
        <Image
          src={`${environmentConfig.baseImageUrl}/images/main_full.webp`}
          alt="Database System"
          class="w-full h-full"
        />
      </Fragment>
    </Content>
  </div>
  <DigitalTransFormation
    title="Custom System Development"
    subtitle="Experience, expertise, and services you can trust"
  />
  <ProductShowCase />
  <div class="bg-[#FAFAFA] pb-16">
    <TrustBusiness
      title="Committed to Service Quality"
      subtitle="With the experience and expertise of our team of over 30+ people and collaborations with government and private sector agencies"
    />
  </div>
  <TalktoMe />
</Layout>

<script>
  document.addEventListener('astro:page-load', () => {
    const openChatHead = document.querySelectorAll('.open-chat-head');
    if (openChatHead) {
      openChatHead.forEach((element) => {
        element.addEventListener('click', () => {
          const zohoButton = document.querySelector('#zsiq_float') as HTMLButtonElement;
          if (zohoButton) {
            zohoButton.click();
          }
        });
      });
    }
  });
</script>
