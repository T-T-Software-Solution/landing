  },
  {
    src: `${environmentConfig.baseImageUrl}/images/news/2025/NETConf2024/LINE_ALBUM_.NET Conf Thailand 2024 (20241123)_241213_2.jpg`,
    alt: '1',
  },
  {
    src: `${environmentConfig.baseImageUrl}/images/news/2025/NETConf2024/LINE_ALBUM_.NET Conf Thailand 2024 (20241123)_241213_3.jpg`,
    alt: '2',
  },
  {
    src: `${environmentConfig.baseImageUrl}/images/news/2025/NETConf2024/LINE_ALBUM_.NET Conf Thailand 2024 (20241123)_241213_5.jpg`,
    alt: '3',
  },
  {
    src: `${environmentConfig.baseImageUrl}/images/news/2025/NETConf2024/LINE_ALBUM_.NET Conf Thailand 2024 (20241123)_241213_6.jpg`,
    alt: '4',
  },
];
---

<Layout metadata={metadata}>
  <WidgetWrapper containerClass="max-w-7xl mx-auto">
    <Headline title="" subtitle={event.title} classes={{ container: 'pt-12 lg:pt-0' }} />
    <div class="p-6">
