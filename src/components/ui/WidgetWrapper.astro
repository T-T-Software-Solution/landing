---
import type { HTMLTag } from 'astro/types';
import { twMerge } from 'tailwind-merge';
import type { Widget } from '~/types';
import Background from './Background.astro';

export interface Props extends Widget {
  containerClass?: string;
  ['as']?: HTMLTag;
  wrapperClass?: string;
}

const { id, isDark = false, containerClass = '', bg, as = 'section', wrapperClass = '' } = Astro.props;

const WrapperTag = as;
---

<WrapperTag class={twMerge('relative not-prose scroll-mt-[72px]', wrapperClass)} {...id ? { id } : {}}>
  <div class="absolute inset-0 pointer-events-none -z-[1]" aria-hidden="true">
    <slot name="bg">
      {bg ? <Fragment set:html={bg} /> : <Background isDark={isDark} />}
    </slot>
  </div>
  <div
    class:list={[
      twMerge('relative mx-auto max-w-7xl px-4 lg:px-6 py-12 lg:py-16 lg:py-20 text-default', containerClass),
      { dark: isDark },
    ]}
  >
    <slot />
  </div>
</WrapperTag>
