---
import '@fontsource-variable/inter';
import '@fontsource/ibm-plex-sans-thai';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: Inter Variable, 'IBM Plex Sans Thai';
    --aw-font-serif: Inter Variable, 'IBM Plex Sans Thai';
    --aw-font-heading: Inter Variable, 'IBM Plex Sans Thai';

    --aw-color-primary: rgb(240, 102, 66);
    --aw-color-secondary: rgb(255, 106, 63);
    --aw-color-accent: rgb(139, 139, 139);

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: Inter Variable, 'IBM Plex Sans Thai';
    --aw-font-serif: Inter Variable, 'IBM Plex Sans Thai';
    --aw-font-heading: Inter Variable, 'IBM Plex Sans Thai';

    --aw-color-primary: rgb(240, 102, 66);
    --aw-color-secondary: rgb(255, 106, 63);
    --aw-color-accent: rgb(139, 139, 139);

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(3 6 32);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
