---
const { officeName, address, mapSrc } = Astro.props;
---

<div class="bg-white p-4 rounded-lg shadow-md h-full flex flex-col">
  <div class="mb-4 flex-grow">
    <h3 class="font-semibold mb-2">{officeName}</h3>
    <p class="text-sm text-gray-600">{address}</p>
  </div>

  <div class="relative overflow-hidden rounded-lg" style="padding-bottom: 56.25%;">
    <iframe
      src={mapSrc}
      width="100%"
      height="100%"
      class="absolute top-0 left-0 w-full h-full"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
    >
    </iframe>
  </div>
</div>
