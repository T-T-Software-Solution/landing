    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        contactInfoList.map((contact) => (
          <ContactInfo title={contact.title} phone={contact.phone} email={contact.email} icon={contact.icon} />
        ))
      }
    </div>

    <div class="mt-12">
      <h2 class="text-2xl font-semibold text-center mb-4">ที่ตั้งสำนักงานของเรา</h2>
