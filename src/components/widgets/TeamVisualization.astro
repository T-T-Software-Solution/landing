<style>
  .team-visualization {
    position: relative;
    width: 100%;
    height: 500px;
    margin: 0px auto;
  }

  .member-circle {
    position: absolute;
    background: linear-gradient(70deg, #fac61f, #f89721, #db6f31);
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
    text-align: center;
    padding: 10px;
  }
  .member-circle.has-border {
    background: #fff;
    color: #101010;
  }

  .member-circle.has-border::before {
    border-radius: 100%;
    content: '';
    background-image: linear-gradient(70deg, #fac61f, #f89721, #db6f31);
    top: -7px;
    left: -7px;
    bottom: -7px;
    right: -7px;
    position: absolute;
    z-index: -1;
  }

  .center {
    width: 150px;
    height: 150px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
  }

  .count {
    font-size: 2.25em;
  }

  .label {
    font-size: 1.2em;
  }

  .sub-label {
    font-size: 0.8em;
  }

  .role1 {
    top: 5%;
    left: 25%;
  }
  .role2 {
    top: 12%;
    left: 55%;
  }
  .role3 {
    top: 20%;
    left: 80%;
  }
  .role4 {
    top: 40%;
    left: 67%;
  }
  .role5 {
    top: 60%;
    right: 2%;
  }
  .role6 {
    bottom: 5%;
    left: 60%;
  }
  .role-center {
    top: 30%;
    left: calc(50% - 55px);
    width: 110px;
    height: 110px;
  }
  .member-text {
    position: absolute;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #101010;
    font-weight: bold;
    text-align: center;
    padding: 10px;
    top: 50%;
    left: calc(50% - 55px);
    width: 110px;
    height: 110px;
  }
  .role7 {
    top: 15%;
    left: 0%;
  }
  .role8 {
    top: 32%;
    left: 7%;
  }
  .role9 {
    top: 50%;
    left: 0%;
  }
  .role10 {
    top: 66%;
    left: 18%;
  }
  .role11 {
    bottom: 7%;
    left: 0%;
  }
  .role12 {
    bottom: 5%;
    left: 32%;
  }

  .role10,
  .role12,
  .role8,
  .role6,
  .role2 {
    width: 80px;
    height: 80px;
  }

  .role9,
  .role5,
  .role4,
  .role1 {
    width: 90px;
    height: 90px;
  }

  .role11,
  .role7,
  .role3 {
    width: 70px;
    height: 70px;
  }

  /* Optional: Add hover effect */
  .member-circle:hover {
    transform: scale(1.1);
    transition: transform 0.3s ease;
    color: #fff;
  }

  @media (min-width: 475px) {
    .role8 {
      left: 15%;
    }
  }

  @media (min-width: 640px) {
    .team-visualization {
      width: 640px;
      height: 600px;
    }
    .role5 {
      top: 60%;
      left: 72%;
    }
    .role7 {
      top: 17%;
      left: 10%;
    }

    .role-center {
      left: calc(50% - 90px);
      width: 180px;
      height: 180px;
    }
    .member-text {
      top: 55%;
      left: calc(50% - 90px);
      width: 180px;
      height: 180px;
    }
    .role11,
    .role10,
    .role12,
    .role8,
    .role6,
    .role2 {
      width: 100px;
      height: 100px;
    }

    .role9,
    .role5,
    .role4,
    .role1 {
      width: 110px;
      height: 110px;
    }
  }

  @media (min-width: 768px) {
