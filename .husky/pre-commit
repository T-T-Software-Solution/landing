echo 'Running pre-commit hooks...'

branch="$(git rev-parse --abbrev-ref HEAD)"

if [ "$branch" = "main" ]; then
  echo "ЁЯЪл COMMITTING DIRECTLY TO THE MAIN BRANCH IS STRICTLY FORBIDDEN!"
  echo "ЁЯЪл р╕Бр╕▓р╕г commit р╣Вр╕Фр╕вр╕Хр╕гр╕Зр╣Др╕Ыр╕вр╕▒р╕З main branch р╣Ар╕Ыр╣Зр╕Щр╕кр╕┤р╣Ир╕Зр╕бр╕┤р╕Ър╕▒р╕Зр╕Др╕зр╕гр╕Чр╕╡р╣Ир╕Ир╕░р╕Бр╕гр╕░р╕Чр╕│!"
  exit 1
fi