        icon: `${environmentConfig.baseImageUrl}/images/jaspersoft.svg`,
        classes: {
          icon: 'mt-[30px]',
        },
      },
      {
        description: 'Apache Superset',
        icon: `${environmentConfig.baseImageUrl}/images/superset_logo.svg`,
